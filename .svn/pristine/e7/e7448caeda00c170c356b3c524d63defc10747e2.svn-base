<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/civ_user_pic"
        android:src="@mipmap/icon_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="79dp"
        android:layout_height="98dp" />

    <RelativeLayout
        android:id="@+id/rl_type_container"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/civ_user_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type_sms"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="53dp"
            android:text="验证码登录"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_sms"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/tv_type_sms"
            android:background="@color/colorWhite"
            android:layout_marginLeft="28dp"
            android:layout_width="142dp"
            android:layout_height="2dp"/>

        <TextView
            android:id="@+id/tv_type_pwd"
            android:layout_marginRight="62dp"
            android:layout_alignParentRight="true"
            android:text="密码登录"
            android:textColor="#40ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_pwd"
            android:visibility="invisible"
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:layout_below="@+id/tv_type_pwd"
            android:background="@color/colorWhite"
            android:layout_width="142dp"
            android:layout_height="2dp"/>

    </RelativeLayout>



    <EditText
        android:id="@+id/et_login"
        android:layout_below="@+id/rl_type_container"
        android:paddingLeft="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:hint="@string/login_tip"
        android:inputType="number"
        android:background="@drawable/background_input"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/et_pwd"
        android:visibility="gone"
        android:layout_below="@+id/et_login"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:hint="@string/pwd_tip"
        android:background="@drawable/background_input"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <Button
        android:id="@+id/btn_login"
        android:layout_below="@+id/et_pwd"
        android:textColor="#fa857c"
        android:textSize="15sp"
        android:background="@drawable/background_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_height="45dp" />

    <TextView
        android:layout_below="@+id/btn_login"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/common_margin_left"
        android:text="首次登陆会自动创建账户"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>