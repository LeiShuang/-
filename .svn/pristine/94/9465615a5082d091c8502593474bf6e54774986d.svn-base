<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout

        android:background="@color/color_child_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--标题栏-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/login_bar_color"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:background="@drawable/background_login"
                android:layout_width="match_parent"
                android:layout_height="152dp">

                <ImageView
                    android:id="@+id/iv_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_user_img"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="58dp"
                    android:layout_height="58dp" />

                <TextView
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/civ_user_img"
                    android:layout_marginTop="53dp"
                    android:text="试用达人的签名，试用达人的签名，试用达人的签名，试用达人的签名"
                    android:layout_marginRight="16dp"
                    android:textColor="#707070"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_marginLeft="13dp"
                    android:layout_toRightOf="@+id/civ_user_img"
                    android:layout_marginTop="26dp"
                    android:text="@string/login_register"
                    android:textSize="16sp"
                    android:textColor="@color/mine_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:text="签到"
                    android:background="@drawable/background_text_apply"
                    android:textColor="@color/login_bar_color"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="48dp"
                    android:layout_height="22dp" />

                <LinearLayout
                    android:layout_below="@+id/civ_user_img"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_concern"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_concern_num"
                            tools:text="68"
                            android:textSize="22sp"
                            android:textColor="@color/login_bar_color"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="我的关注"
                            android:layout_below="@+id/tv_concern_num"
                            android:layout_marginBottom="@dimen/common_padding_top"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_fans"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_fans_num"
                            tools:text="985"
                            android:textSize="22sp"
                            android:textColor="@color/login_bar_color"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="我的粉丝"
                            android:layout_below="@+id/tv_fans_num"
                            android:layout_marginBottom="@dimen/common_padding_top"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_integral"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_integral_num"
                            tools:text="12265"
                            android:textSize="22sp"
                            android:textColor="@color/login_bar_color"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="我的积分"
                            android:layout_below="@+id/tv_integral_num"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/common_padding_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_my_trial"
            android:background="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_my_trial"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_my_try"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="我的试用"
                android:textColor="@color/mine_text_color"
                android:textSize="@dimen/mine_common_size"
                android:layout_toRightOf="@+id/iv_my_trial"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmallGray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_collection"
            android:background="@color/colorWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_my_collection"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_my_collection"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="我的收藏"
                android:textSize="@dimen/mine_common_size"
                android:textColor="@color/mine_text_color"
                android:layout_toRightOf="@+id/iv_my_collection"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmallGray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_report"
            android:background="@color/colorWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_my_report"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_my_report"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="我的报告"
                android:textSize="@dimen/mine_common_size"
                android:textColor="@color/mine_text_color"
                android:layout_toRightOf="@+id/iv_my_report"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmallGray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_info"
            android:background="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_my_info"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_about_us"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="基本信息"
                android:textSize="@dimen/mine_common_size"
                android:textColor="@color/mine_text_color"
                android:layout_toRightOf="@+id/iv_my_info"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmallGray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_address"
            android:background="@color/colorWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_my_address"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_address"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="联系地址"
                android:textSize="@dimen/mine_common_size"
                android:textColor="@color/mine_text_color"
                android:layout_toRightOf="@+id/iv_my_address"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSmallGray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:background="@color/colorWhite"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mine_item_height">

            <ImageView
                android:id="@+id/iv_about_us"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_about_us"
                android:layout_width="@dimen/img_title_size"
                android:layout_height="@dimen/img_title_size" />

            <TextView
                android:text="关于我们"
                android:textSize="@dimen/mine_common_size"
                android:textColor="@color/mine_text_color"
                android:layout_toRightOf="@+id/iv_about_us"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/icon_more"
                android:layout_width="@dimen/img_more_size"
                android:layout_height="@dimen/img_more_size" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
