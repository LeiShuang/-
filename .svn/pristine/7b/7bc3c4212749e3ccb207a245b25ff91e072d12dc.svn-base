<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:src="@mipmap/ico_back_black"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#5a5a5a"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:id="@+id/view_split"
        android:layout_below="@+id/rl_header"
        android:background="#CBCBCB"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <RelativeLayout
        android:id="@+id/rl_account_address"
        android:layout_below="@+id/view_split"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/common_margin_left"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <ImageView
            android:id="@+id/iv_address"
            android:src="@mipmap/icon_about_us"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_address"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:text="我的收货地址"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:background="@color/split_mine"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_account_info"
        android:layout_below="@+id/rl_account_address"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <ImageView
            android:id="@+id/iv_info"
            android:src="@mipmap/icon_about_us"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:text="个人信息"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_safe"
        android:layout_below="@+id/rl_account_info"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/common_margin_left"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <ImageView
            android:id="@+id/iv_safe"
            android:src="@mipmap/icon_about_us"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_safe"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:text="账号安全"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_out"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_margin_left"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:background="@drawable/background_text_concern_26"
        android:layout_width="match_parent"
        android:layout_height="51dp">

        <TextView
            android:layout_centerInParent="true"
            android:text="退出登录"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>