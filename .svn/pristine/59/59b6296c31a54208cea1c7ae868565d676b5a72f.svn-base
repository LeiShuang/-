<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:src="@mipmap/ico_back_black"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息"
            android:textColor="#5a5a5a"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:id="@+id/view_split"
        android:layout_below="@+id/rl_header"
        android:background="#CBCBCB"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumb_collect"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_thumb_up_big"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_below="@+id/iv_thumb_collect"
            android:text="赞和收藏"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/common_margin_left"
            android:textSize="15sp"
            android:textColor="@color/home_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
        android:id="@+id/iv_comment"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_comment_big"
        android:layout_width="40dp"
        android:layout_height="40dp" />

        <TextView
            android:layout_below="@+id/iv_comment"
            android:text="评论和@"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/common_margin_left"
            android:textSize="15sp"
            android:textColor="@color/home_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_concern"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon_concern_big"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_below="@+id/iv_concern"
            android:text="新增关注"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/common_margin_left"
            android:textSize="15sp"
            android:textColor="@color/home_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_message"
        android:layout_marginTop="@dimen/common_margin_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_message"
            android:background="@color/color_child_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>