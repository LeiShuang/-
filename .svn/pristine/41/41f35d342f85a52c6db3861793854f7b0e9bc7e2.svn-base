<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_child_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_item_title"
        android:textColor="@color/home_item_title"
        tools:text="标题"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="new"
        android:layout_toRightOf="@+id/tv_item_title"
        android:layout_alignTop="@+id/tv_item_title"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/sp_12"
        android:textColor="#FA857C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_see_more"
        android:text="@string/see_more"
        android:textSize="14sp"
        android:textColor="@color/home_item_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_home_tip"
        android:layout_toLeftOf="@+id/tv_see_more"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@mipmap/icon_logo_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>