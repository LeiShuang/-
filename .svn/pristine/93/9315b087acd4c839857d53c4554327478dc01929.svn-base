<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ten_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_margin_left"
        android:paddingRight="@dimen/common_margin_right">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_father_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/five_padding"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_father_image">

            <RelativeLayout
                android:id="@+id/rl_father_name_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_father_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorSmallGray"
                    android:textSize="@dimen/discuss_write_size"
                    tools:text="15" />
                <ImageView
                    android:id="@+id/iv_father_star"
                    android:layout_toLeftOf="@+id/tv_father_star"
                    android:layout_marginRight="@dimen/five_padding"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_unstar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <!--姓名-->
                <TextView
                    android:id="@+id/tv_discuss_father_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ten_padding"
                    android:layout_toLeftOf="@+id/tv_father_star"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:paddingBottom="@dimen/five_padding"
                    android:paddingTop="@dimen/five_padding"
                    android:singleLine="true"
                    android:textColor="@color/colorSmallGray"
                    android:textSize="@dimen/font_normal"
                    tools:text="这是姓名" />

            </RelativeLayout>
            <!--评论内容-->
            <TextView
                android:id="@+id/tv_father_discuss_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_father_name_out"
                android:layout_marginLeft="@dimen/ten_padding"
                android:paddingBottom="@dimen/five_padding"
                android:paddingTop="@dimen/five_padding"
                android:textColor="@color/home_item_more" />

            <TextView
                android:id="@+id/tv_father_discuss_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_father_discuss_content"
                android:layout_marginLeft="@dimen/ten_padding"
                android:singleLine="true"
                android:textColor="@color/colorSmallGray"
                android:textSize="@dimen/font_normal"
                tools:text="2019-01-01"
                android:paddingBottom="@dimen/ten_padding"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>