<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_name"
            android:text="用户名"
            android:layout_margin="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_below="@+id/tv_user_name"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginBottom="@dimen/common_margin_left"
            android:text="地址"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    <View
        android:layout_below="@+id/tv_address"
        android:background="@color/split_mine"
        android:layout_width="match_parent"
        android:layout_height="1px"/>



</RelativeLayout>