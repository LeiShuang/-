<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/common_refresh"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            app:srlPrimaryColor="@color/colorGray"
            app:srlAccentColor="@android:color/white"
            app:srlEnablePreviewInEditMode="true"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/common_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_child_bg"/>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:background="@color/colorGray"
            app:srlAccentColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <com.mingle.widget.LoadingView
        android:id="@+id/loading_view"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/ll_refresh_noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_noData"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_recycler_empty"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/iv_noData"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten_padding"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:text="@string/no_data_attention"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_net_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_no_net"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_recycler_error"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/iv_no_net"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten_padding"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:text="@string/no_net_error"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_refresh_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorWhite">
        <ImageView
            android:id="@+id/iv_error"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_recycler_reload"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/iv_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten_padding"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:text="@string/load_error"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>