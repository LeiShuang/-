<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_report_search"
        android:layout_marginTop="@dimen/fivteen_padding"
        android:background="@color/try_use_top_color"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
       <android.support.v7.widget.SearchView
           android:id="@+id/report_search"
           app:searchIcon="@mipmap/ico_search"
           android:background="@color/try_use_search_bg"
           android:layout_centerVertical="true"
           android:layout_marginTop="@dimen/ten_padding"
           android:layout_marginBottom="@dimen/ten_padding"
           android:gravity="center_vertical"
           android:layout_marginRight="@dimen/ten_padding"
           android:layout_marginLeft="@dimen/fivteen_padding"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/report_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/try_use_top_color"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="@color/colorBarText" />
    <android.support.v4.view.ViewPager
        android:id="@+id/report_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>