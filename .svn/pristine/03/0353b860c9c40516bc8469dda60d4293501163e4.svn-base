<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/rl_search_container"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <EditText
            android:id="@+id/et_search"
            android:inputType="text"
            android:textSize="@dimen/sp_12"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:paddingLeft="26dp"
            android:background="@drawable/bg_search_home"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:src="@mipmap/icon_gray_search"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/search_tabLayout"
        android:minHeight="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/login_bar_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/login_bar_color"
        app:tabTextColor="@color/mine_text_color" />
    <android.support.v4.view.ViewPager
        android:id="@+id/search_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>