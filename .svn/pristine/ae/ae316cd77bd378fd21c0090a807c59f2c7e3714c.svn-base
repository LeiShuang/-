<?xml version="1.0" encoding="utf-8"?>
<com.gcssloop.widget.RCRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:round_corner="4dp"
    android:layout_marginLeft="@dimen/common_margin_left"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_head"
            android:src="@mipmap/icon_default_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_width="54dp"
            android:layout_height="54dp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_below="@+id/civ_user_head"
            android:layout_marginTop="@dimen/common_padding_top"
            android:layout_centerHorizontal="true"
            tools:text="试用达人"
            android:textColor="#707070"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_fans_num"
            tools:text="粉丝数量"
            android:layout_marginTop="@dimen/common_padding_top"
            android:layout_marginLeft="11dp"
            android:layout_below="@+id/tv_user_name"
            android:textColor="#707070"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_report_number"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            tools:text="报告数量"
            android:layout_marginTop="@dimen/common_padding_top"
            android:layout_below="@+id/tv_user_name"
            android:textColor="#707070"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_concern"
            android:text="关注"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_text_concern"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/common_padding_top"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="98dp"
            android:layout_height="28dp" />

    </RelativeLayout>



</com.gcssloop.widget.RCRelativeLayout>