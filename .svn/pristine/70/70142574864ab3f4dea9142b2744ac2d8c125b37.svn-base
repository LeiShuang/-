package com.zfsoft.zfsoft_product.net;

import com.zfsoft.zfsoft_product.entity.BannerBean;
import com.zfsoft.zfsoft_product.entity.MyTrySingleBean;
import com.zfsoft.zfsoft_product.entity.ResponseListInfo;
import com.zfsoft.zfsoft_product.entity.ThingsInfoEntity;
import com.zfsoft.zfsoft_product.entity.TryNewProductBean;

import java.util.List;

import io.reactivex.Observable;
import retrofit2.http.GET;
import retrofit2.http.Query;

/**
 * 创建日期：2018/12/24 on 10:15
 * 描述:接口类
 * 作者:Ls
 */
public interface ApiService {


    /*
     * 轮播图数据
     * */
    @GET("system/connect/getCarousel")
    Observable<Response<List<BannerBean>>> getBannerList(@Query("hsk") String hsk, @Query("link") String link);

    /*
    * 首页试用新品 6条数据 system/connect/cp/xplist
    * */
    @GET("system/connect/getNewProducts")
    Observable<Response<List<TryNewProductBean>>> getTryNewProductList(@Query("hsk") String hsk, @Query("link") String link);


    /*
    * 设置界面 进入 我的试用界面
    * */
    @GET("baidu")
    Observable<Response<ResponseListInfo<MyTrySingleBean>>> getMyTryProductList(@Query("hsk") String hsk, @Query("link") String link);



    /**
     * 试用页面进行中商品列表获取
     * @param   hsk  握手码
     * @param   page
     * @param   size
     * */
    @GET("system/connect/getALLNewProducts")
    Observable<Response<ResponseListInfo<ThingsInfoEntity>>> getTryUseThingsList(@Query("hsk")String hsk,@Query("page")int page,@Query("size")int size);
}
