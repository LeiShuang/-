<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/write_report_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_padding"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/try_use_top_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/try_use_top_color"
        app:tabTextColor="@color/colorSmallBlack" />
</LinearLayout>