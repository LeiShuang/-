    @Override
    public void getCommentsSuccess(CommentsBean info) {
        if (info.getData() != null){
            mComments = new ArrayList<>();
            mComments.addAll(InfoServer.getDiscussInfo(info));
        }
        mSize=  mComments.size();
       // mAdapter.setNewData(mComments);

        RefreshState refreshState = mRefreshReport.getState();



        if (refreshState == RefreshState.Refreshing || refreshState == RefreshState.None){

            //此时是刷新状态
            //如果数据为空，则显示错误布局
            /*if (info == null){
                mRefreshReport.finishRefresh(1500,false);
                showErrorView();
                return;
            }*/

            if (info.getData().size() == 0 ){
                mRefreshReport.finishRefresh(1500,true);
                RxToast.showToast("数据为空");
                return;
            }

            if (0 <  info.getData().size() && info.getData().size() < 10){
                mRefreshReport.finishRefresh(1500,true);
                mAdapter.setNewData(InfoServer.getDiscussInfo(info));
                return;
            }


        }else if (refreshState == RefreshState.Loading){

            //此时是加载更多状态,已经加载完全部数据
            if (info.getData() == null){
                mRefreshReport.finishRefresh(1500,false);
                return;

            }
            if (isOvered()){
                mRefreshReport.finishLoadMore(1500,true,true);
                return;
            }

            if (!isOvered()){
                mRefreshReport.finishLoadMore(1500,true,false);
                mAdapter.addData(InfoServer.getDiscussInfo(info));
                return;
            }
        }
    }

    @Override
    public void getCommentsFailed(String errorMsg) {

    }
    private int mSize;
    private boolean isOvered(){
        if (mSize < 6) {
            return true;//已经结束
        }else {
            return false;
        }
    }
