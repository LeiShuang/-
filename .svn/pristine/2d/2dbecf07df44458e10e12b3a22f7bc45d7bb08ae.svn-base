<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_child_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/fivteen_padding"
        android:layout_marginRight="@dimen/fivteen_padding"
        android:layout_marginTop="@dimen/ten_padding"
        android:layout_marginBottom="@dimen/ten_padding"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--物品图片-->
    <ImageView
        android:id="@+id/iv_child_pic"
        android:layout_width="match_parent"
        android:src="@mipmap/ico_child_bg"
        android:scaleType="centerCrop"
        android:layout_height="180dp"/>
    <!--标题-->
     <TextView
         android:padding = "@dimen/five_padding"
         android:gravity="center_vertical"
         android:id="@+id/tv_child_title"
         android:layout_below="@+id/iv_child_pic"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/colorSmallBlack"
         android:textStyle="bold"
         android:textSize="@dimen/font_normal"
         tools:text= "这是一个标题"/>
    <RelativeLayout
        android:id="@+id/rl_child_1"
        android:layout_below="@+id/tv_child_title"
        android:padding="@dimen/five_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--一个商品的体积-->
        <TextView
            android:id="@+id/tv_child_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/grey"
            tools:text="50ml"
            android:gravity="center_vertical|left"/>
        <TextView
            android:id="@+id/tv_child_numer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="数量: 10"
            android:textColor="@color/grey"
            android:gravity="center_vertical|right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rl_child_1"
        android:padding="@dimen/five_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--一个商品的体积-->
        <TextView
            android:id="@+id/tv_child_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/grey"
            tools:text="售价 ￥200"
            android:gravity="center_vertical|left"/>
        <TextView
            android:id="@+id/tv_child_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ico_fire"
            android:drawablePadding="@dimen/five_padding"
            tools:text="500"
            android:textColor="@color/grey"
            android:gravity="center_vertical|right"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>