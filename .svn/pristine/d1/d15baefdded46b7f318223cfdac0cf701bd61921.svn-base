<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_pic"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <RelativeLayout
        android:id="@+id/rl_type_container"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/civ_user_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_type_sms"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:text="验证码登录"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_sms"
            android:layout_alignLeft="@+id/tv_type_sms"
            android:layout_alignRight="@+id/tv_type_sms"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_type_sms"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_type_pwd"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:text="密码登录"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_pwd"
            android:visibility="invisible"
            android:layout_alignLeft="@+id/tv_type_pwd"
            android:layout_alignRight="@+id/tv_type_pwd"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_type_pwd"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

    </RelativeLayout>




    <Button
        android:id="@+id/btn_clear"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_type_container"
        android:layout_marginRight="16dp"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <EditText
        android:id="@+id/et_phone_num"
        android:hint="请输入手机号"
        android:background="@null"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/btn_clear"
        android:layout_below="@+id/rl_type_container"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/et_phone_num"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/et_phone_sms"
        android:hint="请输入验证码"
        android:background="@null"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/btn_clear"
        android:layout_below="@+id/et_phone_num"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/et_phone_sms"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"/>


    <Button
        android:layout_below="@+id/et_phone_sms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="登录"
        android:layout_width="120dp"
        android:layout_height="50dp" />



</RelativeLayout>