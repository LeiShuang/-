<?xml version="1.0" encoding="utf-8"?>
<com.gcssloop.widget.RCRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:round_corner="4dp"
    android:layout_width="match_parent"
    android:layout_height="136dp">

        <RelativeLayout
            android:id="@+id/rl_one"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="136dp">
            
            <ImageView
                android:id="@+id/iv_head_one"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="96dp" />

            <TextView
                android:id="@+id/tv_apply_one"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/iv_head_one"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_text_apply"
                android:textColor="#FA857C"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/apply_for"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price_one"
                tools:text="价格"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tv_apply_one"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/tv_apply_one"
                android:textColor="#CBCBCB"
                android:layout_below="@+id/iv_head_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            
        </RelativeLayout>


</com.gcssloop.widget.RCRelativeLayout>