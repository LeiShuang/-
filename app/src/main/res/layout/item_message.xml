<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:src="@mipmap/iv_default"
        android:layout_margin="@dimen/common_margin_left"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tv_message_title"
        tools:text="标题标题标题标题标题标题标题标题"
        android:maxLines="1"
        android:maxLength="16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/common_margin_left"
        android:layout_toLeftOf="@+id/tv_show_time"
        android:layout_toRightOf="@+id/iv_head"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_message_content"
        android:layout_alignParentBottom="true"
        tools:text="这里是内容这里是内容这里是内容这里是内容"
        android:maxLines="1"
        android:maxLength="20"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/common_margin_left"
        android:layout_toRightOf="@+id/iv_head"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_show_time"
        tools:text="2018-12-31"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/common_margin_left"
        android:textSize="12sp"
        android:textColor="#a7a7a7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/split_mine"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>