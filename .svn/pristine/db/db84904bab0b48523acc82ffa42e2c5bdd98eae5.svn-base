<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:src="@mipmap/icon_back_black"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息设置"
            android:textColor="#5a5a5a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_save"
            android:text="保存"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="#5a5a5a"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="45dp" />


    </RelativeLayout>

    <View
        android:background="#CBCBCB"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v4.widget.NestedScrollView
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user"
                android:src="@mipmap/icon_default_head"
                android:layout_marginLeft="@dimen/common_margin_left"
                android:layout_marginTop="@dimen/common_margin_left"
                android:layout_width="74dp"
                android:layout_height="74dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_user_name"
                    android:text="姓名"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_toRightOf="@+id/tv_user_name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="请输入姓名"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_nick_name"
                    android:text="昵称"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_nick_name"
                    android:layout_toRightOf="@+id/tv_nick_name"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="请输入昵称"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:id="@+id/view_split"
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_job"
                    android:text="职业"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_job"
                    android:layout_toRightOf="@+id/tv_job"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="请输入职业"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_birthday"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_birthday_tip"
                    android:text="生日"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_birthday_select"
                    android:layout_toRightOf="@+id/tv_birthday_tip"
                    android:text="请选择"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="#a7a7a7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_show_birthday_dialog"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:src="@mipmap/icon_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_sex_tip"
                    android:text="性别"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_sex_select"
                    android:layout_toRightOf="@+id/tv_sex_tip"
                    android:text="请选择"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="#a7a7a7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_show_dialog"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:src="@mipmap/icon_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_address"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_province"
                    android:text="所在地区"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:textColor="@color/mine_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_toRightOf="@+id/tv_province"
                    tools:text="市"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:textColor="@color/mine_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_district"
                    android:layout_toRightOf="@+id/tv_city"
                    tools:text="区"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:textColor="@color/mine_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_select_address"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:src="@mipmap/icon_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <EditText
                    android:id="@+id/et_address"
                    android:hint="详细地址"
                    android:gravity="left|top"
                    android:padding="@dimen/common_margin_left"
                    android:maxLines="2"
                    android:textColor="@color/mine_text_color"
                    android:textSize="15sp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="79dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/tv_sign_tip"
                    android:text="我的签名"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/common_margin_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/et_my_sign"
                    android:layout_toRightOf="@+id/tv_sign_tip"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="请输入签名"
                    android:gravity="left|top"
                    android:maxLength="50"
                    android:padding="@dimen/common_margin_left"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />


            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view_split_tip"
                    android:background="@color/color_child_bg"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
                <TextView
                    android:id="@+id/tip_feedback"
                    android:layout_below="@+id/view_split_tip"
                    android:text="反馈平台"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:layout_marginLeft="@dimen/common_margin_right"
                    android:textSize="15sp"
                    android:textColor="@color/mine_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp">


                <TextView
                    android:id="@+id/tv_number_red_book"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:layout_marginLeft="@dimen/common_margin_right"
                    android:text="小红书号"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_number_book"
                    android:layout_toRightOf="@+id/tv_number_red_book"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="选填"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_nick_red_book"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:layout_marginLeft="@dimen/common_margin_right"
                    android:text="小红书昵称"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_nick_book"
                    android:layout_toRightOf="@+id/tv_nick_red_book"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="选填"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_address_red_book"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:layout_marginLeft="@dimen/common_margin_right"
                    android:text="小红书主页地址"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_address_book"
                    android:layout_toRightOf="@+id/tv_address_red_book"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="选填"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_fans_red_book"
                    android:layout_marginTop="@dimen/common_padding_top"
                    android:layout_marginLeft="@dimen/common_margin_right"
                    android:text="小红书粉丝数"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_fans_book"
                    android:layout_toRightOf="@+id/tv_fans_red_book"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/common_margin_left"
                    android:layout_marginRight="@dimen/common_margin_left"
                    android:hint="选填"
                    android:textColorHint="#a7a7a7"
                    android:background="@drawable/background_input"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <View
                    android:layout_alignParentBottom="true"
                    android:background="#CBCBCB"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>

            </RelativeLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>