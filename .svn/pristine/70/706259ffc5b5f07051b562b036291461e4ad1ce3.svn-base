    private MyHandler mMyHandler = new MyHandler(this);

    static class MyHandler extends Handler {
        /*
         * 为防止内存泄漏,使用弱引用
         * */
        WeakReference<ReportDetailFragment> mFragmentWeakReference;

        MyHandler(ReportDetailFragment fragment) {
            mFragmentWeakReference = new WeakReference<>(fragment);
        }

        @Override
        public void handleMessage(Message msg) {
            super.handleMessage(msg);
            ReportDetailFragment reportDetailFragment = mFragmentWeakReference.get();
            if (reportDetailFragment != null) {
                mImages = (List<String>) msg.obj;
                switch (msg.what) {
                    case 1:
                        mBanner.setImages(mImages)
                                .setImageLoader(new GlideImageLoader())
                                .setBannerStyle(BannerConfig.NUM_INDICATOR)
                                .setDelayTime(5000)
                                .start();
                        break;

                    default:
                        break;
                }
            } else {

            }


        }
    }

