public class ReportViewPagerFragment extends BaseListFragment<ReportInfo,MyTryPresenter> {
    public static ReportViewPagerFragment newInstance() {

        Bundle args = new Bundle();

        ReportViewPagerFragment fragment = new ReportViewPagerFragment();
        fragment.setArguments(args);
        return fragment;
    }

    @Override
    protected void setSpecificPresenter() {

    }

    @Override
    protected void onItemCLick(BaseQuickAdapter adapter, int position) {
        getContext().startActivity(new Intent(getActivity(), ReportDetailActivity.class));
    }

    @Override
    protected void initFootView(BaseQuickAdapter adapter) {

    }

    @Override
    protected void initHeader(BaseQuickAdapter adapter) {

    }





    @Override
    public RecyclerView.ItemDecoration getItemDecoration() {
        return new ChildItemDecoration(SizeUtils.dp2px(8,getContext()));

    }

    @Override
    protected RecyclerView.LayoutManager getLayoutManager() {
        GridLayoutManager layoutManager = new GridLayoutManager(getContext(),2);
        return layoutManager;
    }

    @Override
    protected BaseQuickAdapter<ReportInfo, BaseViewHolder> getAdapter() {
        ReportChildFragmentAdapter adapter = new ReportChildFragmentAdapter();
        adapter.setNewData(InfoServer.getReportList(20));
        return adapter;
    }
}
