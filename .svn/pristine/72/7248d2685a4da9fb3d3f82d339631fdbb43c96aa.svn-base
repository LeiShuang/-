<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:src="@mipmap/ico_back_black"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的收货地址"
            android:textColor="#5a5a5a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#5a5a5a"
            android:textSize="16sp" />


    </RelativeLayout>

    <View
        android:background="#CBCBCB"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/et_name"
            android:hint="收货人姓名"
            android:paddingLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#CBCBCB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/et_phone"
            android:hint="手机号码"
            android:paddingLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#CBCBCB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_province"
            android:text="所在地区"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_toRightOf="@+id/tv_province"
            tools:text="市"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_district"
            android:layout_toRightOf="@+id/tv_city"
            tools:text="区"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

       <ImageView
           android:id="@+id/iv_select_address"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="@dimen/common_margin_left"
           android:src="@mipmap/icon_more"
           android:layout_width="20dp"
           android:layout_height="20dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#CBCBCB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <EditText
            android:id="@+id/et_address"
            android:hint="详细地址"
            android:gravity="left|top"
            android:padding="@dimen/common_margin_left"
            android:maxLines="2"
            android:textColor="@color/mine_text_color"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="79dp" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#CBCBCB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="是否默认地址"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:textColor="@color/mine_text_color"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.zfsoft.zfsoft_product.widget.SwitchButton
            android:id="@+id/btn_switch"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin_left"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#CBCBCB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

</LinearLayout>